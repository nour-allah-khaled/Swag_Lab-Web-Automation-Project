<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Paraller Execution" verbose="1" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="listeners.TestMethodLoggerListener"/>
        <listener class-name="listeners.ITestResultListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <test name="Test Valid Scenarios om Edge">
        <parameter name="browser" value="edge"/>
        <groups>
            <run>
                <include name="Valid_Scenarios"/>
            </run>
        </groups>
        <classes>
            <class name="paraller_execution.Paraller_Execution"/>
        </classes>
    </test>

    <test name="Test Valid Scenarios om chrome">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="Valid_Scenarios"/>
            </run>
        </groups>
        <classes>
            <class name="paraller_execution.Paraller_Execution"/>
        </classes>
    </test>
</suite>