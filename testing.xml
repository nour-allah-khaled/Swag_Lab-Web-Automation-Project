<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="TestSuite">
    <listeners>
        <listener class-name="listeners.TestMethodLoggerListener"/>
        <listener class-name="listeners.ITestResultListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <test name="MyTests">
        <classes>
            <class name="tests.TC01_Login">
                <methods>
                    <include name="testLogin"/>
                    <include name="Invaliduser_testLogin"/>
                    <include name="Invalidpass_testLogin"/>
                    <include name="empty_testLogin"/>
                </methods>
            </class>
            <class name="tests.TC02_Home"/>
            <class name="tests.TC03_Product_Details"/>
            <class name="tests.TC04_Add_Cart"></class>
            <class name="tests.TC05_Checkout"></class>
            <class name="tests.TC06_OverView"></class>
            <class name="tests.TC07_Finish"></class>
        </classes>
    </test>
</suite>
